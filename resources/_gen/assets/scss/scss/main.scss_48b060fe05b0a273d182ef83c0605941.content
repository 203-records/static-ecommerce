@import "https://fonts.googleapis.com/css?family=Open+Sans:400,600,700";.buy-button{color:#fff;background-color:#f85e5e;font-weight:700;border-radius:99px;padding:10px;padding-left:20px;padding-right:20px;outline:none;border:none;white-space:nowrap;transition:.2s transform ease-in-out,.2s box-shadow ease-in-out;box-shadow:0 0 0 rgba(181,8,8,.2)}.buy-button:hover{transform:translate(0px,-4px);box-shadow:0 4px 6px rgba(181,8,8,.2)}.promotional-message{margin-bottom:100px;margin-top:25px;text-align:center;margin-left:7.5%}.promotional-message h3{font-size:24px;line-height:normal;text-align:center;letter-spacing:.4em;text-transform:uppercase;margin:0}.promotional-message h2{font-size:100px;margin:0;background:linear-gradient(90deg,#FFB890 0%,#F75D5D 100%);color:transparent;-webkit-background-clip:text;background-clip:text}@media(max-width:95%){.promotional-message h2{font-size:75px}}.header{display:flex;align-items:center;max-width:1000px;width:100%;height:100px;margin-left:auto;margin-right:auto}.header__branding{display:flex;justify-content:center;align-items:center;font-weight:700;color:#404040;text-decoration:none}.header__logo{height:40px;margin-right:15px}.header__title{margin:0;font-size:24px}.header__cart{margin-left:auto}.header__cart .snipcart-summary{display:flex;justify-content:center;align-items:center}.header__cart .snipcart-total-price{color:#f85e5e;font-weight:700;margin-left:10px}.products{max-width:75%;margin-left:auto;margin-right:auto}.product{width:75%;font-weight:700;text-align:center;display:grid;grid-template-areas:"name         name         name" "description  description  description" "button       button       button" "image        image        image";grid-template-columns:1fr 1fr 1fr;margin-bottom:5em;grid-column-gap:5em}.product__name{grid-area:name;font-size:36px;text-align:center;left:50%;margin-left:10%}.product__image{grid-area:image;width:100%;height:50em;object-fit:cover;object-position:center;border-radius:4px;box-shadow:0 18.025px 43.775px rgba(0,0,0,.25)}.product__description{grid-area:description;font-weight:400;margin-bottom:25px;margin-left:7.5%;text-align:center}.product__price{font-size:28px;text-align:center;display:inline-block;position:absolute;left:50%;margin-left:.5em}.product .buy-button{margin-top:3em;text-align:center;display:inline-block;position:absolute;left:50%}.product__button-container{display:inline-block;grid-area:button;margin-bottom:8em;right:5%}.product:nth-of-type(odd){grid-template-areas:"name         name         name" "description  description  description" "button       button       button" "image        image        image";grid-template-columns:1fr 1fr 3fr}@media(max-width:95%){.product:nth-of-type(odd){grid-template-areas:"name         name" "description  description" "button       button" "image        image";grid-template-columns:1fr 1fr 1fr 1fr}.product:nth-of-type(odd) img{height:300px;width:100%;margin-bottom:30px}}@media(max-width:95%){.product{grid-template-areas:"image        image      " "name         name       " "description  description" "button       button     ";grid-template-columns:1fr 1fr}.product img{height:300px;width:100%;margin-bottom:30px}}.footer{justify-content:center;align-items:center;height:100px;width:103.66%;transform:translate(-2.5%,0%);display:flex;color:#fff;background:linear-gradient(90deg,#707070 0%,#474747 100%);text-transform:uppercase;font-weight:700;color:#ccc}.footer a{color:#fff}*{box-sizing:border-box;font-family:open sans,sans-serif;font-size:16px;color:#aaa;font-weight:700}html,body{min-height:100vh;margin:0;padding-left:10px;padding-right:10px}body{background-color:#222;display:grid;grid-template-rows:auto 1fr auto}main{display:flex;flex-direction:column;align-items:center}h2 .product__name{color:#eee}